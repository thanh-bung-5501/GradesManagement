@page
@model WebClient.Pages.Manager.ListSubjectsModel

@{
    ViewData["Title"] = "List Subjects";
}

<h3>List Subjects</h3>

<div class="row justify-content-between">
    <div class="d-flex col-lg-5 col-md-12 mb-2">
        <input id="search" class="form-control form-control-sm" type="search" placeholder="Search" aria-label="Search">
        <button id="btn-search" class="btn btn-outline-primary btn-sm mx-2 d-flex">
            <i class="bi bi-search"></i>&nbsp;Search
        </button>
        <a class="btn btn-outline-primary btn-sm d-flex" href="">
            <i class="bi bi-arrow-repeat"></i>&nbsp;Reset
        </a>
    </div>
    <div class="d-flex justify-content-end col-lg-5 col-md-12 mb-2">
        <button id="btn-add-subject" class="btn btn-primary btn-sm"><i class="bi bi-plus-square"></i> Add Subject</button>
    </div>
</div>

@*
    Modal AddSubject
*@
<div class="modal" id="add-subject-modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-person-fill-add"></i> Add Subject</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label class="col-form-label-sm">Code</label>
                <input id="add-code" class="form-control form-control-sm" type="text" />

                <label class="col-form-label-sm">SubjectName</label>
                <input id="add-name" class="form-control form-control-sm" type="text" />

                <label class="col-form-label-sm">Teacher</label>
                <select id="add-teacher-id" style="width: 100%">
                </select>
                <div id="add-teacher-details"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" onclick=""><i class="bi bi-save"></i> Save</button>
            </div>
        </div>
    </div>
</div>

@*
    Modal EditSubject
*@
<div class="modal" id="edit-subject-modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label class="col-form-label-sm">Id</label>
                <input id="edit-id" readonly class="form-control form-control-sm" />

                <label class="col-form-label-sm">Code</label>
                <input id="edit-code" class="form-control form-control-sm" type="text" />

                <label class="col-form-label-sm">SubjectName</label>
                <input id="edit-name" class="form-control form-control-sm" type="text" />

                <label class="col-form-label-sm">Teacher</label>
                <select id="edit-teacher-id" style="width: 100%">
                </select>
                <div id="edit-teacher-details"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" onclick=""><i class="bi bi-save"></i> Save changes</button>
            </div>
        </div>
    </div>
</div>

<table id="table" class="table table-bordered table-striped mt-2 table-responsive">
    <thead class="bg-primary text-white">
        <tr>
            <th scope="col">#</th>
            <th scope="col">SubjectId</th>
            <th scope="col">SubjectCode</th>
            <th scope="col">SubjectName</th>
            <th scope="col">TeacherId</th>
            <th scope="col">TeacherName</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody id="table-body">
    </tbody>
</table>

<div id="show-result"></div>

<div class="d-flex justify-content-between">
    <div id="page-size">
        <select id="select-page-size" class="form-select form-select-sm">
            <optgroup id="select-optgroup" label="Page sizes">
            </optgroup>
        </select>
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm">
        </ul>
    </nav>
</div>

@* Loading ajax*@
<div class="modal-loading"></div>

@section scripts{
    <script src="~/js/Admin/ListSubjects.js"></script>
}